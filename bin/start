#!/usr/bin/env ruby
$LOAD_PATH << 'lib'

require 'bot'
require 'config'

$config = Configuration.new('config.json')

triviabot = Bot.new

triviabot.bot.command :trivia do |event, command|
  case command
    when "start"
      triviabot.channel = event.channel.id
      triviabot.start
      return
    when "stop"
      triviabot.stop
      return
    else
      "Unknown Command"
  end
end

triviabot.bot.run
